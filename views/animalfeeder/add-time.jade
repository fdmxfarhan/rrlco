extends ./layout

block styles
    link(rel="stylesheet", href="/css/forms.css")

block content
    .panel-view
        .header-view
            nav 
                a.left(href="/animalfeeder") 
                    i.fa.fa-arrow-left
                h1#page-title افزودن ساعت
                a.right(href="#") 
                    i.fa.fa-gear
            header
                .circle
                    i.fa.fa-cat 
                    h1 دستگاه #{feeder.id}
        svg.curve-border(width="100%" height="10vw" viewBox="0 0 100 20" preserveAspectRatio="none")
            path(d="M0,0 C40,20 60,20 100,0 Z" fill="#4361EE")
        .add-time-form
            .form-view 
                form(action="/animalfeeder/add-time" method="post")         
                    .raw
                        .label انتخاب ساعت: 
                        .clock-select 
                            select(name="second") 
                                -for(var i=0; i<60; i++)
                                    option(value="#{i}")= clock(i)
                            | :
                            select(name="minute") 
                                -for(var i=0; i<60; i++)
                                    option(value="#{i}")= clock(i)
                            | :
                            select(name="hour") 
                                -for(var i=0; i<24; i++)
                                    option(value="#{i}")= clock(i)
                    .raw 
                        button.submit.fullsize.blue(type="submit")
                            i.fa.fa-plus
                            | افزودن
        a.add-time-btn(href="/animalfeeder")
            i.fa.fa-arrow-right


        button.install-app(id="install-button" style="display:none;")
            i.fa.fa-mobile-screen
            | Install App
        include ./footer
        script.
            $(document).ready(function(){
                $('.add-time-form').hide().show(500);
                $('h1#page-title').hide().show(500);
            });