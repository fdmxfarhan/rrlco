extends ./layout

block content
    .panel-view
        .header-view
            nav 
                a.left(href="/animalfeeder") 
                    i.fa.fa-home
                h1#page-title Pet Feeder
                a.right(href="#") 
                    i.fa.fa-gear
            header
                .circle
                    i.fa.fa-cat 
                    h1 دستگاه #{feeder.id}
        svg.curve-border(width="100%" height="10vw" viewBox="0 0 100 20" preserveAspectRatio="none")
            path(d="M0,0 C40,20 60,20 100,0 Z" fill="#4361EE")
        
        .times-list-view
            -for(var i=0; i < feeder.times.length; i++){
                .item 
                    .title 
                        h1 
                            i.fa.fa-clock
                            .text #{clock(feeder.times[i].hour)}:#{clock(feeder.times[i].minute)}
                        h2 25 گرم غذای خشک
                    .actions 
                        a.edit(href="/animalfeeder/edit-time?id=#{feeder.id}&index=#{i}") 
                            i.fa.fa-edit 
                        a.delete(href="/animalfeeder/delete-time?id=#{feeder.id}&index=#{i}" onclick="return confirm('مطمئن هستید؟')") 
                            i.fa.fa-trash
            -}
        button.install-app(id="install-button" style="display:none;")
            i.fa.fa-mobile-screen
            | Install App
        
        a.add-time-btn(href="/animalfeeder/add-time")
            i.fa.fa-plus

        include ./footer
        script.
            $(document).ready(function(){
                $('.times-list-view').hide().fadeIn(500);
                $('h1#page-title').hide().fadeIn(500);
                $('footer').hide().fadeIn(500);
            });