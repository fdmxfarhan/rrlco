        .user-nav
            -if(user){
                a.user(href="/dashboard")
                    .text= user.fullname
                    i.fa.fa-user
            -}else{
                a.user(href="/users/login")
                    .text ورود/ثبت نام
                    i.fa.fa-user
            -}
            a.cart(href="/dashboard/shopping-cart")  
                i.fa.fa-shopping-cart
                -if(user){
                    -if(user.shoppingcart.length > 0)
                        .shopping-cart-count= user.shoppingcart.length
                -}
            a.cart(href="/products")  
                i.fa.fa-search
            -if(theme){
                -if(theme == 'light'){
                    a.dark(href="/theme?theme=dark") 
                        i.fa.fa-moon
                -}else{
                    a.dark(href="/theme?theme=light") 
                        i.fa.fa-sun
                -}
            -}else{
                a.dark(href="/theme?theme=dark") 
                    i.fa.fa-moon
            -}
            
            
