                        .raw
                            textarea#edit(name="description" style="margin-top: 30px;" placeholder="Type some text")
                            //- textarea.long(name="description" placeholder="توضیحات کامل")
                        .raw 
                            //- input.dual(type="text" name="teacher" placeholder="مدرس")
                            select.quarter(name="teacherID") 
                                -for(var i=0; i<teachers.length; i++)
                                    option(value="#{teachers[i]._id}") #{teachers[i].firstName} #{teachers[i].lastName}
