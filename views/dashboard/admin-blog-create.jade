block content
    .dashboard-view 
        .dashboard-cont-view
            .content
                .blog-form-container
                    h1.title-blog ساخت محتوا جدید
                    form.blog-form(method='POST', action='/upload/admin-blog-create' enctype="multipart/form-data")
                        label(for='title') عنوان:
                        input.title(type='text', name='title', required)
                        br
                        label(for='shortDescription') توضیحات کوتاه:
                        br
                        textarea.short-description(name="shortDescription") 
                        br
                        label(for='coverImage') عکس کاور:
                        input.file(type="file" name="coverImage")
                        br
                        label(for='author') نویسنده:
                        input.title(type='text', name='author', required)
                        br
                        label(for='category') دسته بندی:
                        input.title(type='text', name='category', required)
                        br
                        label(for='tags') تگ ها:
                        input.title(type='text', name='tags', required)
                        br
                        label(for='content') محتوا:
                        textarea#edit(name="content" style="margin-top: 30px;" placeholder="Type some text")
                        
                        script.
                            new FroalaEditor("div#froala-editor");
                        button.submit-btn(type='submit') ثبت

        .sidebar-view 
            include sidebar
        
