            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject('See docs to implement AI Assistant')),
        });
    ink(href="https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css" rel="stylesheet" type="text/css")
block content
    .dashboard-view 
        .dashboard-cont-view
            .content
                h1 Create New Blog Post
                form(method='POST', action='/dashboard/admin-blog-create')
                    label(for='title') Title:
                    input(type='text', name='title', required)

                    input(type='hidden', name='content', id='hidden-content')
                    #editor-container

                    textarea#editor(name="content")
                    script.
                        tinymce.init({
                            selector: '#editor',
                            height: 500,
                            plugins: 'image media link code lists table',
                            toolbar: 'undo redo | styles | bold italic | alignleft aligncenter alignright | code'
                        });
                    #froala-editor
                    script(script type="text/javascript" src="https://cdn.jsdelivr.net/npm/froala-editor@latest/js/froala_editor.pkgd.min.js")
                    script.
                            new FroalaEditor("div#froala-editor");
                    button(type='submit') Submit

        .sidebar-view 
            include sidebar
        


                 
    script.
        const quill = new Quill('#editor-container', {
            theme: 'snow'
        });

        const form = document.querySelector('form');
        form.onsubmit = function() {
            const hiddenInput = document.querySelector('#hidden-content');
            hiddenInput.value = quill.root.innerHTML;
        };
    script(src="/js/dashboard.js") 
    script.
        document.getElementById('sidebar-link-11').classList.add('active');

