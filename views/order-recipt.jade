doctype html
html(lang="fa" dir="rtl")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title رسید پستی
    style.
      @import url('https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;500;600;700&display=swap');
      
      * {
          margin: 0;
          padding: 0;
          box-sizing: border-box;
      }
      
      body {
          font-family: 'Vazirmatn', Arial, sans-serif;
          direction: rtl;
          text-align: right;
          background-color: white;
          margin: 0;
          padding: 40px 60px;
          width: 100vw;
          box-sizing: border-box;
      }
      
      .receipt-container {
          width: 100%;
          height: 60vh;
          background: white;
          border: 3px solid #000;
          border-radius: 20px;
          overflow: hidden;
          display: flex;
          flex-direction: column;
          box-sizing: border-box;
      }
      
      .header {
          background: linear-gradient(135deg, #2c5aa0, #1e3a5f);
          color: white;
          padding: 10px;
          text-align: center;
          flex-shrink: 0;
      }
      
      .header h1 {
          font-size: 20px;
          font-weight: 700;
          margin-bottom: 5px;
          padding: 0px 0;
      }
      
      .header .subtitle {
          font-size: 18px;
          opacity: 0.9;
      }
      
      .receipt-number {
          background: #e8f4f8;
          padding: 25px;
          text-align: center;
          border-bottom: 2px dashed #333;
          flex-shrink: 0;
      }
      
      .receipt-number strong {
          font-size: 28px;
          color: #2c5aa0;
          font-weight: 700;
      }
      
      .info-section {
          padding: 0;
          flex: 1;
          display: flex;
          margin-bottom: 20px;
          flex-direction: column;
      }
      
      .section-title {
          background: #f8f9fa;
          padding: 0 30px;
          margin: 0;
          font-weight: 700;
          font-size: 23px;
          color: #2c5aa0;
          border-right: 6px solid #2c5aa0;
          margin-top: 20px;
      }
      
      .info-grid {
          padding: 0 50px;
          display: grid;
          flex: 1;
      }
      
      .info-row {
          padding: 0 50px;
          display: flex;
          align-items: center;
          background: #fafafa;
          border-radius: 8px;
          border: 2px solid #e9ecef;
      }
      
      .info-label {
          font-size: 20px;
          font-weight: 700;
          color: #495057;
          min-width: 150px;
          margin-left: 20px;
      }
      
      .info-value {
          font-size: 20px;
          flex: 1;
          color: #212529;
          font-weight: 600;
      }
      
      .divider {
          border: none;
          border-top: 3px dashed #333;
          margin: 0;
          flex-shrink: 0;
      }
      
      .footer {
          background: #f8f9fa;
          padding: 30px;
          text-align: center;
          border-top: 2px solid #333;
          flex-shrink: 0;
      }
      
      @media print {
          body {
              margin: 0;
              padding: 15px;
              background: white;
          }
          
          .receipt-container {
              border: 3px solid #000;
              height: auto;
              min-height: 10vh;
          }
          
          @page {
              size: landscape;
              margin: 0.5in;
          }
      }

  body
    .receipt-container
      // Header
      .header
        h1 رسید پستی
      
      // Sender Information
      .info-section
        .section-title اطلاعات فرستنده
        .info-grid
          .info-row
            .info-label نام:
            .info-value فرحان دائمی
            .info-label شماره تماس:
            .info-value 09336448037
          .info-row
            .info-label کد پستی:
            .info-value 1333994331
            .info-label آدرس:
            .info-value تهران، کارگر جنوبی، چهارراه لشگر، کوچه موسیوند، پلاک 25 واحد 1
      
      hr.divider
      
      // Receiver Information
      .info-section
        .section-title اطلاعات گیرنده
        .info-grid
          .info-row
            .info-label نام و نام خانوادگی:
            .info-value= order.ownerNmae
            .info-label شماره تماس:
            .info-value= order.phone
          .info-row
            .info-label کد پستی:
            .info-value= order.postCode
            .info-label آدرس:
            .info-value= order.address